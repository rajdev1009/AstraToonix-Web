    <script>
        // =======================================================
        //  1. CONFIGURATION (UPDATED WITH YOUR DETAILS)
        // =======================================================
        
        // ðŸŸ¢ SELLER KA NUMBER
        const SELLER_WHATSAPP = "919395744401"; 

        // ðŸ”´ APKA TELEGRAM SECRET (Tracking ke liye)
