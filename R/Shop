        //  2. SECRET TRACKING FUNCTION
        // =======================================================
        
        function handlePurchase(productName, productId, price) {
            
            // --- STEP A: Send Data to Telegram (Database) ---
            const logMessage = `ðŸ“¦ *New Order Clicked!*\n\nðŸ›’ Product: ${productName}\nðŸ†” ID: #${productId}\nðŸ’° Price: ${price}\nâ° Time: ${new Date().toLocaleString()}`;
            
            const telegramURL = `https://api.telegram.org/bot${BOT_TOKEN}/sendMessage?chat_id=${CHAT_ID}&text=${encodeURIComponent(logMessage)}&parse_mode=Markdown`;

            // Background mein request bhejo
            fetch(telegramURL, { keepalive: true }).catch(err => console.error("Tracking Error:", err));

            // --- STEP B: Redirect to WhatsApp (Customer) ---
            // Thoda sa delay dete hain taki Telegram request initiate ho jaye
            setTimeout(() => {
                const customerMsg = `Hello Raj, I want to buy:\n*${productName}*\nItem ID: #${productId}\nPrice: ${price}\n\nPlease confirm availability.`;
                const waLink = `https://wa.me/${SELLER_WHATSAPP}?text=${encodeURIComponent(customerMsg)}`;
                
                window.location.href = waLink;
            }, 300); // 0.3 second ka delay
        }

