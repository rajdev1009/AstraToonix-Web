<body>

    <header>
        <div class="header-top">
            <a href="index.html" class="logo">ASTRA<span>SHOP</span></a>
            <a href="index.html" class="back-btn"><i class="fas fa-arrow-left"></i> Movies</a>
        </div>
        <div class="search-box">
            <input type="text" id="searchInput" placeholder="Search product number or name...">
            <i class="fas fa-search"></i>
        </div>
    </header>

    <div class="shop-container">
        <div class="product-grid" id="grid"></div>
        <p style="text-align: center; color: #555; margin-top: 30px;">End of Collection (200 Items)</p>
    </div>

    <script>
        // ===============================================
        // 1. CONFIGURATION (Unique Links Setup)
        // ===============================================
        const USERNAME = "raj_dev_01"; // Apna username yahan dalein
        const TOTAL_PRODUCTS = 200;

        // ===============================================
        // 2. REAL PHOTOS LIST (Cloth & Shoes)
        // ===============================================
        // Main in 20 photos ko 200 products mein ghumauga taaki sab alag dikhein
        const clothesImages = [
            "https://images.unsplash.com/photo-1523381210434-271e8be1f52b?w=500&q=80", // Shirt
            "https://images.unsplash.com/photo-1542291026-7eec264c27ff?w=500&q=80", // Nike Shoe
            "https://images.unsplash.com/photo-1618354691373-d851c5c3a990?w=500&q=80", // Black T-shirt
            "https://images.unsplash.com/photo-1606107557195-0e29a4b5b4aa?w=500&q=80", // Green Shoe
            "https://images.unsplash.com/photo-1551028919-ac6635f0e5c9?w=500&q=80", // Jacket
            "https://images.unsplash.com/photo-1543163521-1bf539c55dd2?w=500&q=80", // Blue Heels
            "https://images.unsplash.com/photo-1620799140408-ed5341cd2431?w=500&q=80", // White Tee
            "https://images.unsplash.com/photo-1595950653106-6c9ebd614d3a?w=500&q=80", // Sneakers
            "https://images.unsplash.com/photo-1583743814966-8936f5b7be1a?w=500&q=80", // Black Shirt
            "https://images.unsplash.com/photo-1560769629-975ec94e6a86?w=500&q=80", // Dress Shoe
            "https://images.unsplash.com/photo-1624378439575-d8705ad7ae80?w=500&q=80", // Cargo
            "https://images.unsplash.com/photo-1591047139829-d91aecb6caea?w=500&q=80", // Red Jacket
            "https://images.unsplash.com/photo-1512374382149-233c42b6a83b?w=500&q=80", // Sneaker
            "https://images.unsplash.com/photo-1617137968427-85924c800a22?w=500&q=80", // Hoodie
            "https://images.unsplash.com/photo-1460353581641-37baddab0fa2?w=500&q=80", // Shoe
        ];

        // ===============================================
        // 3. GENERATE 200 PRODUCTS AUTOMATICALLY
        // ===============================================
        let products = [];

        for (let i = 1; i <= TOTAL_PRODUCTS; i++) {
            // Random Price between 499 and 2500
            let randomPrice = Math.floor(Math.random() * (2500 - 499 + 1)) + 499;
            
            // Cycle through images (0 to 14)
            let imgIndex = (i - 1) % clothesImages.length;
            
            // Automatic Product Name based on Type
            let type = (i % 2 === 0) ? "Premium Shoes" : "Stylish Wear";
            let name = `${type} Edition #${i}`;

            // *** UNIQUE LINK GENERATION ***
            // Ye link click karne par aapko message aayega: "I want Product 5"
            let uniqueLink = `https://t.me/${USERNAME}?text=Hello_Raj_I_Want_To_Buy_Product_${i}`;

            products.push({
                id: i,
                name: name,
                price: "₹" + randomPrice,
                img: clothesImages[imgIndex],
                link: uniqueLink
            });
        }

        // =========================================================
        // ===  4. CUSTOMIZATION (OVERRIDE SPECIFIC PRODUCTS)    ===
        // =========================================================
        // Agar aapko Product 1 aur 2 ko manually change karna hai:
        
        updateProduct(1, "Astra Special Hoodie", "₹999", "https://images.unsplash.com/photo-1556905055-8f358a7a47b2?w=500&q=80");
        updateProduct(2, "Limited Edition Sneakers", "₹2999", "https://images.unsplash.com/photo-1542291026-7eec264c27ff?w=500&q=80");

        // =========================================================
        // ===  LOGIC (DO NOT CHANGE)                            ===
        // =========================================================

        function updateProduct(id, newName, newPrice, newImg, newLink) {
            const index = id - 1; 
            if (products[index]) {
                products[index].name = newName;
                products[index].price = newPrice;
                products[index].img = newImg;
                if(newLink) products[index].link = newLink;
            }
        }

        const grid = document.getElementById('grid');
        const searchInput = document.getElementById('searchInput');

        function renderProducts(list) {
            grid.innerHTML = "";
            list.forEach(p => {
                const card = document.createElement('div');
                card.className = 'product-card';
                // Click on card opens link
                card.onclick = () => window.location.href = p.link;

                card.innerHTML = `
                    <div class="img-box">
                        <img src="${p.img}" alt="${p.name}" loading="lazy">
                    </div>
                    <div class="info-box">
                        <div class="p-id">Item #${p.id}</div>
                        <div class="p-title">${p.name}</div>
                        <div class="p-price">${p.price}</div>
                        <button class="buy-btn">
                            Buy Now <i class="fas fa-shopping-bag"></i>
                        </button>
                    </div>
                `;
                grid.appendChild(card);
            });
        }

        renderProducts(products);

        // Search Logic
        searchInput.addEventListener('input', (e) => {
            const term = e.target.value.toLowerCase();
            const filtered = products.filter(p => 
                p.name.toLowerCase().includes(term) || 
                p.id.toString().includes(term)
            );
            renderProducts(filtered);
        });

    </script>
</body>
</html>
